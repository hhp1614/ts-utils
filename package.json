{
  "name": "@hhp1614/utils",
  "version": "2.0.1",
  "description": "使用 typescript 开发的一个函数工具库",
  "keywords": [
    "utils",
    "common",
    "node",
    "browser"
  ],
  "main": "lib/index.js",
  "author": "hhp1614<hhp1614@qq.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hhp1614/utils.git"
  },
  "files": [
    "lib"
  ],
  "private": false,
  "scripts": {
    "watch": "rimraf ./lib && npm run lint && tsc -w -p tsconfig.json",
    "build": "rimraf ./lib && tsc -p tsconfig.json && npm run lint",
    "format": "prettier --write {src,test}/**/*.ts vuepress/**/*.js",
    "lint": "eslint {src,test,vuepress/.vuepress} --fix --ext .ts,.js",
    "test": "npm run lint && jest --verbose",
    "docs": "vuepress dev vuepress",
    "docs:build": "npm run lint && rimraf ./docs && vuepress build vuepress --dest ./docs",
    "major": "npm version major -m \"Upgrade to %s\"",
    "minor": "npm version minor -m \"Upgrade to %s\"",
    "patch": "npm version patch -m \"Upgrade to %s\"",
    "publish": "npm run lint && npm publish"
  },
  "jest": {
    "rootDir": "test",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{.ts,.js}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.5",
    "vuepress": "^1.5.2",
    "vuepress-plugin-auto-sidebar": "^1.4.1"
  }
}

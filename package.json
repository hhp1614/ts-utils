{
  "name": "@hhp1614/utils",
  "version": "2.0.0",
  "description": "使用 typescript 开发的一个函数工具库",
  "keywords": [
    "utils",
    "common",
    "node",
    "browser"
  ],
  "main": "lib/index.js",
  "author": "hhp1614<hhp1614@qq.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hhp1614/utils.git"
  },
  "files": [
    "lib"
  ],
  "private": false,
  "scripts": {
    "watch": "rimraf ./lib && tsc -w -p tsconfig.json",
    "build": "rimraf ./lib && tsc -p tsconfig.json",
    "test": "jest --verbose",
    "docs": "vuepress dev vuepress",
    "docs:build": "rimraf ./docs && vuepress build vuepress",
    "major": "npm version major -m \"Upgrade to %s\"",
    "minor": "npm version minor -m \"Upgrade to %s\"",
    "patch": "npm version patch -m \"Upgrade to %s\"",
    "publish": "npm publish"
  },
  "jest": {
    "rootDir": "test",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "jest": "^26.0.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.5",
    "vuepress": "^1.5.2",
    "vuepress-plugin-auto-sidebar": "^1.4.1"
  }
}
